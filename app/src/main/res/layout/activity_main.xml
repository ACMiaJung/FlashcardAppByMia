<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/soft_pink"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/flashcard_question"
        android:layout_marginTop="75dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="monospace"
        android:background="@drawable/card_background_1"
        android:elevation="15dp"
        android:textColor= "#b087d7"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:text="What eye color do kittens have during the first few weeks after their birth?"
        android:gravity="center"
        android:padding="25dp"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/answer"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="42dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/card_background_2"
        android:elevation="15dp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:padding="25dp"
        android:text="Answer: Blue. All cats are born with blue eyes! It takes a a few weeks until their true eye color appears."
        android:textColor="#21a9da"
        android:textSize="15sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/choice_1"
        android:elevation="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/flashcard_question"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:background="@color/tint_of_purple"
        android:fontFamily="monospace"
        android:padding="9dp"
        android:text="depends on genetics."
        android:textColor="#b087d7"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/choice_2"
        android:elevation="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/choice_1"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:background="@color/tint_of_purple"
        android:fontFamily="monospace"
        android:padding="9dp"
        android:text="light blue."
        android:textColor="#b087d7"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/choice_3"
        android:elevation="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/choice_2"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:background="@color/tint_of_purple"
        android:fontFamily="monospace"
        android:padding="9dp"
        android:text="who knows?"
        android:textColor="#b087d7"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/toggle_choices_visibility"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="17dp"
        android:src="@drawable/closed_eye"/>


</RelativeLayout>